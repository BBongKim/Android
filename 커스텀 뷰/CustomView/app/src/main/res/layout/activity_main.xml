<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.example.customview.CheckBoxView
        android:id="@+id/checkBoxView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:checkBoxColor="@color/teal_200"
        app:checkBoxScale="0.9"
        app:layout_constraintBottom_toTopOf="@id/checkBoxView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:text="안녕하세요"
        app:textColor="@color/purple_200"
        app:textSize="10sp" />

    <com.example.customview.CheckBoxView
        android:id="@+id/checkBoxView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:checkBoxColor="@color/purple_200"
        app:checkBoxScale="1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/checkBoxView1"
        app:text="커스텀뷰입니다."
        app:textColor="@color/teal_200"
        app:textSize="15sp" />

</androidx.constraintlayout.widget.ConstraintLayout>